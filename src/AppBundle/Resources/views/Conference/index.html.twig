<div class="row">
    <div class="col">
        <h2 class="section-header mb-4">Upcoming Conferences</h2>
        <table class="table table-sm no-border">
            {% for conference in conferences %}
                <tr class="{{ conference.past ? 'muted' }}">
                    <td>{{ conference.title }}</td>
                    <td>{{ conference.starts|date('D d.m.Y H:i') }}</td>
                    <td>{{ conference.venueName }}</a></td>
                </tr>
            {% endfor %}
        </table>
        {{ form(form) }}
    </div>
</div>