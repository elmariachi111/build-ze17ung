<div class="card" data-id="{{ excerpt.id }}">
    <img class="card-img-top img-fluid" src="{{ excerpt.ownedLeadImageUrl }}" alt="{{ excerpt.title }}">
    <div class="card-block">
        <h4 class="card-title">{{ excerpt.title }}</h4>
        <p class="card-text">{{ excerpt.excerpt }}</p>
    </div>
    <div class="card-footer">
        <small class="text-muted">
            <ul class="list-inline">
                <li>{{ excerpt.author }}</li>
                <li><a href="{{ excerpt.url }}">{{ excerpt.url|slice(0, 40) }}</a></li>
                <li>{{ excerpt.datePublished ? excerpt.datePublished|date('d.m.Y H:i') }}</li>
            </ul>
            <div class="tags">
                {% for tag in excerpt.tags %}
                    <span class="badge badge-pill badge-default"><span class="slug">{{ tag.slug }}</span>
                        {% if is_granted('ROLE_ADMIN') %}
                            <i class="fa fa-remove"></i>
                        {% endif %}
                    </span>
                {% endfor %}
            </div>
            {% if is_granted('ROLE_ADMIN') %}
                {% include '@App/components/_add_tag_form.html.twig' with {id : excerpt.id} %}
            {% endif %}
        </small>
    </div>
</div>